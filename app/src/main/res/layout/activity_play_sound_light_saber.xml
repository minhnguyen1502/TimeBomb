<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_04"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:contentDescription="back"
        android:padding="12dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/about"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toStartOf="@id/background"
        app:layout_constraintStart_toEndOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <ImageView
        android:id="@+id/background"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_background"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ic_hold"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_n_select"
        android:padding="12dp"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintTop_toBottomOf="@id/background"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hold"
        app:layout_constraintTop_toTopOf="@id/ic_hold"
        app:layout_constraintBottom_toBottomOf="@id/ic_hold"
        app:layout_constraintEnd_toStartOf="@id/ic_hold"
        android:layout_marginEnd="-4dp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/ic_single"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_select"
        android:padding="12dp"
        android:layout_marginTop="-8dp"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintTop_toBottomOf="@id/ic_hold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Touch"
        app:layout_constraintTop_toTopOf="@id/ic_single"
        app:layout_constraintBottom_toBottomOf="@id/ic_single"
        app:layout_constraintEnd_toStartOf="@id/ic_single"
        android:layout_marginEnd="-4dp"
        android:textColor="@color/white"/>


    <ImageView
        android:id="@+id/imgSaber"
        android:layout_width="30dp"
        android:layout_height="370dp"
        android:layout_centerInParent="true"
        android:src="@drawable/img_light_saber_6_1"
        android:layout_marginBottom="-430dp"
        app:layout_constraintBottom_toTopOf="@id/img"
        app:layout_constraintEnd_toEndOf="@id/img"
        app:layout_constraintStart_toStartOf="@id/img" />
    <ImageView
        android:id="@+id/img"
        android:layout_width="30dp"
        android:layout_height="600dp"
        android:src="@drawable/img_light_saber_8_2"
        android:layout_marginBottom="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>