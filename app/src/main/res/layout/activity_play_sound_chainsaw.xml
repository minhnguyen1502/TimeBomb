<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_02"
    android:id="@+id/background"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:contentDescription="back"
        android:padding="12dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lines="1"
        android:maxLines="1"
        android:text="Chainsaw"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toStartOf="@id/iv_background"
        app:layout_constraintStart_toEndOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_background"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ic_hold"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_n_select"
        android:padding="12dp"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="@id/iv_background"
        app:layout_constraintTop_toBottomOf="@id/iv_background"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hold"
        app:layout_constraintTop_toTopOf="@id/ic_hold"
        app:layout_constraintBottom_toBottomOf="@id/ic_hold"
        app:layout_constraintEnd_toStartOf="@id/ic_hold"
        android:layout_marginEnd="-4dp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/ic_touch"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_n_select"
        android:padding="12dp"
        android:layout_marginTop="-8dp"
        app:layout_constraintEnd_toEndOf="@id/iv_background"
        app:layout_constraintTop_toBottomOf="@id/ic_hold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Touch"
        app:layout_constraintTop_toTopOf="@id/ic_touch"
        app:layout_constraintBottom_toBottomOf="@id/ic_touch"
        app:layout_constraintEnd_toStartOf="@id/ic_touch"
        android:layout_marginEnd="-4dp"
        android:textColor="@color/white"/>


    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/img_chainsaw_play_8"/>
</androidx.constraintlayout.widget.ConstraintLayout>